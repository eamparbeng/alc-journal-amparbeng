<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alc.kofiamparbeng.ampjournal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop">
            <intent-filter android:label="@string/title_activity_login">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.NewJournalEntryActivity"
            android:label="@string/title_activity_new_journal_entry"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register" />

        <service
            android:name=".sync.JournalSyncFirebaseJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service android:name=".sync.JournalSyncIntentService" android:exported="false"/>

        <activity android:name=".activities.SettingsActivity" android:label="@string/title_activity_settings" android:parentActivityName=".activities.MainActivity"></activity>
        <activity android:name=".activities.FolderSelecterActivity" android:label="@string/title_activity_select_folder" android:parentActivityName=".activities.NewJournalEntryActivity" />
        <activity android:name=".activities.FolderManagementActivity" android:label="@string/title_activity_manage_folder" android:parentActivityName=".activities.NewJournalEntryActivity" />
        <activity android:name=".activities.EditFolderActivity" android:label="@string/title_activity_edit_folder" android:parentActivityName=".activities.FolderManagementActivity" />
    </application>

</manifest>